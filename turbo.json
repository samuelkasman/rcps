{
	"$schema": "https://turbo.build/schema.json",
	"ui": "tui",
	"tasks": {
		"dev": {
			"cache": false,
			"dependsOn": ["^dev"],
			"persistent": true
		},
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**", ".next/**"]
		},
		"lint": {
			"cache": true,
			"outputs": []
		},
		"lint:fix": {
			"cache": false,
			"outputs": []
		},
		"format": {
			"cache": false,
			"outputs": []
		},
		"format:check": {
			"cache": true,
			"outputs": []
		},
		"check-types": {
			"cache": true,
			"outputs": []
		}
	}
}
